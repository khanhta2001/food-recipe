@{
    ViewData["Title"] = "Home Page";
}
<div class="container">
    <div class="container text-center m-0 p-0">
        <div class="row align-items-center">
            <div class="col-7">
                <div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active" data-bs-interval="10000">
                            <a href="{{ url_for ('view_recipe', recipe_id = '1')}}">
                                <img src="images/spiral-vegetable-tart.png" class="d-block w-100" alt="spiral-vegetable-tart">
                            </a>
                        </div>
                        <div class="carousel-item" data-bs-interval="2000">
                            <a href="{{ url_for ('view_recipe', recipe_id = '3')}}">
                                <img src="images/marinated-cherry-tomato-salad.png" class="d-block w-100" alt="marinated-cherry-tomato-salad">
                            </a>
                        </div>
                        <div class="carousel-item">
                            <a href="{{ url_for ('view_recipe', recipe_id = '1')}}">
                                <img src="images/spiral-vegetable-tart.png" class="d-block w-100" alt="spiral-vegetable-tart">
                            </a>
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleInterval" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col">
                <img src="images/upper_frame.png" class="img-fluid" alt="upper frame">
                <div class="text-center fs-3">
                    <p>Recipe of the Day</p>
                    <a href="@(this.Url.Action("CreateRecipe", "Recipe"))">
                        <img src="images/closed_tray.png" class="img-fluid" alt="recipe_of_the_day" id="recipe_of_the_day">
                    </a>
                </div>
                @await Html.PartialAsync("_SearchBarPartial")
                <img src="images/lower_frame.png" class="img-fluid" alt="lower frame">
                </div>
            </div>
    </div>
</div>