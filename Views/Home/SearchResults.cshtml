@model List<RecipeViewModel>
@using (Html.BeginForm())
{
    @await Html.PartialAsync("_SearchBarPartial")
}
<ul class="entries" id="entries">
    <div class="container">
        @if (Model.Count == 0)
        {
            <div>
                Nothing in here so far
            </div>
        }
        <div class="row">
            @foreach (var result in Model)
            {
                <div class="col-4">
                    <div class="text-center">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img" alt="...">
                            <div class="card-body">
                                <a> @result.Title</a>
                            </div>
                            <div class="card-footer">
                                @using (Html.BeginForm("ViewRecipePage", "Recipe"))
                                {
                                    <input type="hidden" name="recipe_id" value=@result.Id>
                                    <button type="submit" style="margin-left:100px" class="btn btn-sm">Details</button>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</ul>