@model List<RecipeViewModel>
@using (Html.BeginForm())
{
    @await Html.PartialAsync("_SearchBarPartial")
}
<ul class="entries" id="entries">
    <div class="container">
        @if (Model.Count == 0)
        {
            <div>
                Nothing in here so far
            </div>
        }
        <div class="row">
            @foreach (var result in Model)
            {
                <div class="col-4">
                    <div class="text-center">
                        <div class="card" style="width: 18rem;">
                            <img src="..." class="card-img" alt="...">
                            <div class="card-body">
                                <a> result.title</a>
                            </div>
                            <div class="card-footer">
                                <form action="{{ url_for ('view_recipe')}}" method="get" class="view_recipe">
                                    <input type="hidden" name="recipe_id" value={{ recipe.id }}>
                                    <button type="submit" style="margin-left:100px" class="btn btn-sm">Details</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</ul>