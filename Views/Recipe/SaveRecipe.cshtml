@if (Model.Count() > 0)
{
    @foreach (RecipeViewModel recipeViewModel in Model)
    {
        <div class="col-4">
            <div class="text-center">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img" alt="...">
                    <div class="card-body">
                        <a> @recipeViewModel.Title</a>
                    </div>
                    <div class="card-footer">
                        @using (Html.BeginForm("ViewRecipePage", "Recipe"))
                        {
                            <input type="hidden" name="recipe_id" value=@recipeViewModel.Id>
                            <button type="submit" style="margin-left:100px" class="btn btn-sm">Details</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
}
else
{
    <div>
        Save your favorite Recipe in here!
    </div>    
}
