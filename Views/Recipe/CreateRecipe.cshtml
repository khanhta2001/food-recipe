@using Microsoft.AspNetCore.Mvc.TagHelpers
@using WebApp.Models
@{
    Layout = "_Layout";
}
@using (Html.BeginForm())
{
    <div class="form-group row">
        @Html.LabelFor(x => x.Title)
        @Html.EditorFor(x => x.Title)
        @Html.ValidationMessageFor(x => x.Title)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Category)
        @Html.EditorFor(x => x.Category)
        @Html.ValidationMessageFor(x => x.Category)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Content)
        @Html.EditorFor(x => x.Content)
        @Html.ValidationMessageFor(x => x.Content)
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.DietaryRestriction)
        @Html.PasswordFor(x => x.DietaryRestriction)
        @Html.ValidationMessageFor(x => x.DietaryRestriction)
    </div>
    <p>
        <button type="submit" class="btn btn-primary" role="button">Login</button>
        <a class="btn btn-primary" href="@(this.Url.Action("CreateRecipe", "Recipe"))">Create Recipe</a>
    </p>
}
